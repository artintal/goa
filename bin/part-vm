#!/bin/bash
#
# Usage: part-vm disk
# partition a VM using the gparted live CD
#
# disk      image or overlay to use
#           (defaults to tune.qcow)
#           
. $(dirname $0)/common

HDA="$1"

if [ -z "$1" ];then DISK="$DEFAULT_DISK";
               else DISK="$1"; fi

# quit if overlay is already running
ps auxwww|grep "\-hda $DISK"|grep -v "grep" >/dev/null && \
    echo "overlay is already running.  Shut it down first." && exit 1

$QEMU_CMD -curses -hda $DISK \
    -cdrom data/gparted-live-0.13.1-2.iso \
    -boot d
