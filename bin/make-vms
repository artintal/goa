#!/bin/sh
#
# Usage: make-vms num...
# Create NUM new overlays based off of tune.qcow.
#
# num - the number of overlays to create,
#       alternately the range of numbers, args fed to `seq'
#
. $(dirname $0)/common

pushd overlays/
for i in $(seq $@);do
    j=$(printf "%0.2d" $i);
    if [ ! -f "$j.qcow" ];then
        qemu-img create -b ../tune.qcow -f qcow2 "$j.qcow"
    fi
done
popd
