#!/bin/bash
#
# Usage: make-vm name [disk]
# make an overlay based off of the many-bugs disk
#
# name      name of the overlay
# 
# disk      image to use (default is tune.qcow)
# 
. $(dirname $0)/common

if [ -z "$1" ]; then help; fi

if echo "$1"|grep -e ".qcow2\?$" >/dev/null; then NAME="$1";
                                             else NAME="$1.qcow2"; fi

if [ -z "$2" ];then
    DISK="$DEFAULT_DISK";
else
    DISK="$2";
fi

pushd overlays/
if [ ! -f "$NAME" ];then qemu-img create -b ../$DISK -f qcow2 $NAME;
                    else echo "overlays/$NAME already exists"; fi
popd
