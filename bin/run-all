#!/bin/bash
#
# Copyright (C) 2012  Eric Schulte
#
# Usage: run-all user cmd args...
# run command args... on every overlay
#
# user  - user to perform the runs
# comd  - command to run
# args  - arguments passed to command
#
# The overlays run are those specified in REMOTES
#
. $(dirname $0)/common

USER="$1"; shift

for remote in ${REMOTES[@]};do
    msg "$remote";
    vm_ssh $remote $USER@localhost "$@";
done
